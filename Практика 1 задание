#include <iostream>
using namespace std;

//Можно ли переставить цифра в числе так, чтобы получился полиндром

int Count(int n)
{
	int m = 0;
	for (int cn = n; cn > 0; cn = cn / 10)
	{
		m++;
	}
	return m;
}

int* input(int* a, int n,int m)
{
	for (int i = 0; i < m; i++)
	{
		a[i] = n % 10;
		n = n / 10;
	}
	return a;
}

bool possibility(int* a, int m)
{
	int k=0;
	for (int i = 0; i < m; i++)
	{
		for (int j = m-1; j >= 0; j--)
		{
			if (i != j)
				if (a[i] == a[j])
					k++;
		}
	}
	if (k == m)
		return true;
	else return false;
}

int main()
{
	int n;
	scanf_s("%d", &n);
	int m = Count(n);
	if (m % 2 == 0)
	{
		int* a;
		a = new int[m];
		a = input(a, n, m);
		int k = possibility(a, m);
		printf("%d", k);
		delete[] a;
	}
	else printf("%d", 0);

	return 0;
}
