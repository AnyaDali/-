#include <iostream>
using namespace std;

//Дан целочисленный массив, состоящий из n элементов. Разменять местами максимальный и минимальный элемент. 

int main() 
{
    int n, indexMin, min, indexMax, max;
    printf("Введите размер массива: ");
    scanf("%d", &n);
    int arr[n];

    int i = 0;
    while(i < n) 
    {
        printf("Enter el: ");
        scanf("%d", &arr[i]);
        i = i + 1;
    }

    min = arr[0];
    max = arr[0];
    indexMin = 0;
    indexMax = 0;
    int b = 1
    while(b < n)
    {
        if(min > arr[b]) 
        {
            min = arr[b];
            indexMin = b;
        } 
        else if (max < arr[b]) 
        {
            max = arr[b];
            indexMax = b;
        }
        b = b + 1;
    }

    //Меняем местами значения
    arr[indexMin] += arr[indexMax];
    arr[indexMax] = arr[indexMin] - arr[indexMax];
    arr[indexMin] -= arr[indexMax];

    int c = 1;
    while(c < n)
    {
        printf("arr[%d] = %d\n", c, arr[c]);
        c = c + 1
    }

    return 0;
}
