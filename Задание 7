#include <iostream>
using namespace std;
//Дана последовательность целых чисел. Среди отрицательных элементов найти максимальный элелемент и его порядковый номер
int main() {
    int n, a, b, max; //n-длина последовательности, a-элемент,
    scanf("%d", &n);
    scanf("%d", &a);
    max = a;
    int index = 1;
    printf("Введите остальные элементы: ");
    int i=2;
    while (i<=n;)
    {
      scanf("%d", &b);
      if(b > 0) 
        { //Проверка на то, что число положительное
            if(max > 0 && max < b) //если да, то проверяем максимальное число на положительность и меньше ли оно
            {
                  max = b;
                  index = i;
            }
        }
      else
            if(max < b) //Больше ли отрицательное число, максимального отрицательного числа
            {
                max = b;
                index = i;
            }
       i=i+1;
    }
    printf("%d\n,%d\n", index, max);
    return 0;
}
